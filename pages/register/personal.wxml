<!--pages/register/personal.wxml-->


<view class="weui-cells weui-cells_after-title">


  <navigator url="pages/register/personal" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">头像</view>
    <image class="temp" src="{{person.head_img}}" mode="cover" bindtap="changepic"></image>
  </navigator>


  <navigator url="./change?changeWhat=name" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">姓名</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{person.name}}</view>
  </navigator>
  <navigator url="./change?changeWhat=phone" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">手机号</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{person.tel}}</view>
  </navigator>

  <navigator url="./change?changeWhat=list1" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">中文备忘</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{person.school}}</view>
  </navigator>

    <navigator url="./change?changeWhat=list2" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">密码1备忘(仅数字)</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{person.number}}</view>
  </navigator>

    <navigator url="./change?changeWhat=list3" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">密码2备忘(仅数字)</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">{{person.enter_year}}</view>
  </navigator>

</view>

